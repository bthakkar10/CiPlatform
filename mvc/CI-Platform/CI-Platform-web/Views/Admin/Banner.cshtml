@{
    ViewData["Title"] = "Banner Management";
    Layout = "_AdminLayout";
}
@model CI_Platform.Entities.ViewModels.AdminBannerViewModel
<div class="container-fluid my-5 mx-2">
    <h3 class="pb-1 border-bottom"><span class="heading-underline pb-1"> Banner </span></h3>

    @*    add button partial view call*@

    <div id="AddOrUpdateBanner"></div>


    <div class="table-responsive m-3">
        <div class="d-flex my-4">
            <div class="admin-search-box d-flex align-items-center border">
                <img class="icon" src="~/images/search.png" alt="search-icon" />
                <input id="searchUser" class="ms-sm-3" type="text" placeholder="Search" />
            </div>

            <button id="AddOrUpdateBanner" class="btn formBtn d-flex align-items-center ms-auto px-4 py-2"><i class="fa-solid fa-plus"></i>&nbsp; Add</button>
        </div>

        <table id="example" cellspacing="0" class="display table table-bordered align-middle" style="width:100%">


            <thead class="gap-2">
                <tr class="bg-light align-middle">
                    <th style="width: max-content;">Title </th>
                    <th>Sort Order</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var banner in Model.BannerList)
                {
                    <tr class="align-middle">
                        <td>@banner.Title</td>
                        <td>@banner.SortOrder</td>
                        <td>
                            <button class="btn p-0" id="EditBtnBanner" data-banner-id="@banner.BannerId">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <button class="p-0 btn" data-bs-toggle="modal" id="DeleteBannerBtn" data-bs-target="#DeleteBanner" data-cms-id="@banner.BannerId">
                                <i class="bi bi-trash"> </i>
                            </button>


                        </td>
                    </tr>
                }
        </table>
        <div class="modal fade" id="DeleteBanner" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form method="post">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <input name="HiddenBannerId" id="HiddenBannerId" type="hidden" />
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div>Are you sure you want to delete this ?? </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="me-3 btn rounded-pill btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" asp-controller="Admin" asp-action="DeleteBanner" class="btn rounded-pill btn-outline-danger">Delete</button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

