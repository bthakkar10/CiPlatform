@{
    ViewData["Title"] = "Story ";
    Layout = "_AdminLayout";
}
@model CI_Platform.Entities.ViewModels.AdminApprovalViewModel
<div class="container-fluid my-5 mx-2">
    <h3 class="pb-1 border-bottom"><span class="heading-underline pb-1"> Story </span></h3>

    @*    add button partial view call*@

    <div class="table-responsive m-3">
        <div class="d-flex my-4">
            <div class="admin-search-box d-flex align-items-center border">
                <img class="icon" src="~/images/search.png" alt="search-icon" />
                <input id="searchUser" class="ms-sm-3" type="text" placeholder="Search" />
            </div>


        </div>

        <table id="example" cellspacing="0" class="display table table-bordered align-middle" style="width:100%">


            <thead class="gap-2">
                <tr class="bg-light align-middle">
                    <th style="width: max-content;">Story Title </th>
                    <th>User Name</th>
                    <th>Mission Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var story in Model.StoryList)
                {
                    <tr class="align-middle">
                        <td>@story.Title</td>
                        <td>@story.User.FirstName  @story.User.LastName</td>
                        <td>@story.Mission.Title</td>

                        <td>
                            <button class="btn formBtn" id="ViewStoryBtn" data-user-id="@story.User.UserId" data-mission-id="@story.Mission.MissionId">
                                View
                                 </button>&nbsp;
                            <button class="p-0 btn ApproveOrDeclineApplication" id="ApprovalBtn" data-bs-toggle="modal" data-bs-target="#StoryModal">
                                <i class="fa-regular fa-circle-check" style="color: #00ff00;"></i>
                            </button>
                            &nbsp;
                            <button class="btn p-0 ApproveOrDeclineApplication" id="DeclineBtn" data-bs-target="#StoryModal" data-bs-toggle="modal">
                                <i class="fa-regular fa-circle-xmark" style="color: #ff0000;"></i>
                            </button>
                            &nbsp;
                            <button class="p-0 btn" data-bs-toggle="modal" id="" data-bs-target="#StoryModal">
                                <i class="bi bi-trash"> </i>
                            </button>
                        </td>
                    </tr>
                }
        </table>
        <div class="modal fade" id="StoryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form method="post">
                <div class="modal-dialog">
                    <div class="modal-content" id="ApplicationModal">
                        <div class="modal-header">
                            <input name="HiddenApplicationId" id="HiddenApplicationId" type="hidden" />
                            <input name="HiddenStatus" id="HiddenStatus" type="hidden" />
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div>Are you sure you want to approve this ?? </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="me-3 btn rounded-pill btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" asp-controller="Admin" asp-action="ApproveOrDeclineApplication" class="btn rounded-pill btn-outline-success">Yes</button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>