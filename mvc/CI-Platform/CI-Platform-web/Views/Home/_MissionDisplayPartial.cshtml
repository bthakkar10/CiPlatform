@model CI_Platform.Entities.ViewModels.MissionListViewModel
@{
    //var Id = ViewBag.Id;
    var email = ViewBag.email;
    var Username = ViewBag.Username;

    var Id = Convert.ToInt64(ViewBag.UserId);
    var totalRecords = ViewBag.totalRecords;
}


<script>
 if (localStorage.getItem('view') == 1) {
        $('#grid-view').show();
        $('#list-view').hide();
    }
    else {
        $('#list-view').show();
        $('#grid-view').hide();
    }
</script>


<span id="missionCount" class="d-none">@totalRecords</span>

@*grid view*@
<div class="container my-5" id="grid-view">
    <div class=" row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-sm-1   g-4">
        <!-- Card starts from col -->
        @foreach (var obj in Model.DisplayMissionCardsDemo)
        {
            double avg_rating = 0;
            if (obj.MissionRatings.Count > 0)
            { avg_rating = obj.MissionRatings.Average(r => r.Rating); }

            DateTime? currDate = @DateTime.Now;
            TimeSpan timeSpan = new TimeSpan(1, 0, 0, 0);
            var deadline = obj.StartDate - timeSpan;
            bool isDeadlinePassed = currDate > deadline;
            bool isEndDatePassed = currDate > obj.EndDate;
            bool isOngoing = currDate > obj.StartDate;
            bool isAlreadyApplied = obj.MissionApplications.Any(a => a.UserId == Id);
            var flag = 1;
            var registered_users = obj.MissionApplications.Count(m => m.ApprovalStatus.Contains("APPROVE"));
            var seats_left = obj.TotalSeats - registered_users;
            var mission_id = obj.MissionId;

            <div class="col card-div ">
                <div class="card grid-card h-100">
                    <span class="d-none"> @obj.MissionId </span>
                    <span class="created-date d-none ">@obj.CreatedAt </span>

                    <p class="mission-skill d-none">
                        @foreach (var skill in obj.MissionSkills)
                        {
                            <span class=" skillName">@skill.Skill.SkillName</span>
                        }
                    </p>
                    <span class="mission-country d-none">@obj.Country.CountryId</span>
                    <span> </span>
                    <div class="pill-on-img">
                        

                        @foreach (var img_mission in obj.MissionMedia)
                        {
                            @if(img_mission.Defaultval == true)
                            {
                             <img src=@img_mission.MediaPath class="card-img-top" alt="@img_mission.MediaName">
                                
                            }

                            @if (img_mission.MediaPath == null)
                            {
                                <img src="~/images/no-image.png"  alt= " "/>
                            }
                        }

                        <div class="location">
                            <img src="~/images/pin1.png">
                            <span class="mission-city">@obj.City.CityName</span>
                        </div>


                        @foreach (var fm in obj.FavouriteMissions)
                        {
                            @if (fm.UserId.Equals(Id))
                            {
                                <button class="  like-on-img " onclick="favourite()">
                                    <i class="bi bi-heart-fill favourite-button filled-heart text-danger" data-mission-id="@obj.MissionId"></i>
                                    flag = 0;
                                </button>
                            }

                        }
                        @if (flag == 1)
                        {
                            <button class="  like-on-img " onclick="favourite()">
                                <i class="bi bi-heart empty-heart text-light favourite-button " data-mission-id="@obj.MissionId"></i>
                            </button>
                        }

                        <button class="add-on-img" type="submit" data-mission-id="@mission_id" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                            <img style="opacity: 1;" src="~/images/add1.png">
                        </button>

                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Recommend to a Co-Worker</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="grid-modal-body">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                    </div>
                                </div>
                            </div>
                        </div>




                        <div class="theme-pill rounded-pill "> <span class="mission-theme">@obj.MissionTheme.Title</span>  </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title ">@obj.Title</h3>
                        <p class="card-text align-items-center">@obj.ShortDescription</p>
                        <div class="d-flex justify-content-between">
                            @obj.OrganizationName
                            <div class="stars">
                                @for (int i = 1; i <= avg_rating; i++)
                                {
                                    <img src="~/images/selected-star.png" />
                                }
                                @for (int i = 5; i > avg_rating; i--)
                                {
                                    <img src="~/images/star.png" />
                                }

                            </div>

                        </div>
                    </div>


                    @if (isEndDatePassed || isAlreadyApplied || seats_left <= 0 || isDeadlinePassed)
                    {
                        <div class=" d-flex pb-3 justify-content-center">
                            <a class="btn btn card-btn" href="@Url.Action("MissionDetail", "Home" , new { MissionId = @obj.MissionId})">
                                View Details &nbsp;&nbsp;<img src="~/images/right-arrow.png" />
                                <img src="~/images/right-arrow2.png" />
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="m-3 list-group position-relative ">
                            <div class="time-pill rounded-pill ">
                                @if (obj.MissionType.Equals("Time"))
                                {
                                    if (isOngoing)
                                    {
                                        <span>Ongoing Opportunity</span>
                                    }
                                    else
                                    {
                                        <span>From @obj.StartDate.Value.ToShortDateString() until @obj.EndDate.Value.ToShortDateString()</span>
                                    }
                                }
                                else
                                {
                                    @foreach (var goal_mission in obj.GoalMissions)
                                    {
                                        @goal_mission.GoalObjectiveText
                                    }
                                }
                            </div>
                            <div class="row gutter mt-4 mb-2 justify-content-around">
                                <div class="col card-detail">
                                    <img class="icon-detail my-2" src="~/images/Seats-left.png" alt="seats left">
                                    <div class="card-detail-text">

                                        <p class="seat-left">  @seats_left </p>
                                        <span>Seats left</span>
                                    </div>
                                </div>
                                @if (obj.MissionType.Equals("Time"))
                                {
                                    <div class="col card-detail">
                                        <img class="icon-detail my-2" src="~/images/deadline.png" alt="deadline">
                                        <div class="card-detail-text ">
                                            <p class="deadline">@obj.StartDate.Value.AddDays(-1).ToShortDateString()</p>
                                            <span>Deadline</span>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var goal_mission in obj.GoalMissions)
                                    {
                                        <div class="col card-detail">
                                            <img class="icon-detail my-2" src="~/images/achieved.png" alt="deadline">
                                            <div class="card-detail-text">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" aria-label="Warning example" style="background-color: #F88634; width:@goal_mission.GoalValue%" aria - valuenow="@goal_mission.GoalValue" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <span>@goal_mission.GoalValue achieved</span>
                                            </div>
                                        </div>
                                    }

                                }
                            </div>
                        </div>


                        <div class=" d-flex pb-3 justify-content-center">
                            <a class="btn card-btn" href="@Url.Action("MissionDetail", "Home" , new { MissionId = @obj.MissionId})">
                                Apply  &nbsp;&nbsp;&nbsp;
                                <img src="~/images/right-arrow.png">
                                <img src="~/images/right-arrow2.png" />
                            </a>
                        </div>

                    }

                </div>
            </div>
        }

        <!-- card ends here -->
    </div>

</div>

