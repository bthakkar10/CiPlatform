@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}
@model CI_Platform.Entities.ViewModels.ForgotPasswordValidation

<div class="forget-right">
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <form class="mt-5 pt-5" method="post">
                <h2>Forget Password</h2>
                <small id="HelpBlock" class="form-text m-3 text-muted">Enter your email address you've using for your account below and we will send you a password reset link</small>
                <div class="m-3">
                    <label asp-for="Email" class="form-label ">Email address</label>
                    <input asp-for="Email" type="email" class="form-control w-100" placeholder="Enter your email address..." id="exampleInputEmail1">
                    <span asp-validation-for="Email" class="validate-text text-danger"></span>
                </div>

                <div class="d-grid  mx-auto p-2 ">
                    <button type="submit">Reset My Password</button>
                </div>
                <div class="d-flex p-4 mb-5 justify-content-center">
                    <a asp-controller="Auth" asp-action="Index" class="login">Login</a>
                </div>

                <a href="#" class=" d-flex sticky-xxl-bottom p-5 mt-5  justify-content-center privacy">Privacy Policy</a>

            </form>
        </div>
    </div>
</div>
