@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}
@model CI_Platform.Entities.ViewModels.UserLoginViewModel

<div class="index-right">
    <div class="container">
        <div class="d-flex justify-content-center align-items-center">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" data-val="true" data-val-required="The email is required" placeholder="evan.donohue@gmail.com" class="form-control form-control-lg w-100z" id="exampleInputEmail1">
                    <span asp-validation-for="Email" class="text-danger validate-text"></span>
                </div>
                <div class="mb-3 position-relative">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" placeholder="**********" class="form-control form-control-lg" id="exampleInputPassword1">
                    <i class="bi bi-eye-fill position-absolute translate-middle-x end-0 top-50 d-none"></i>
                    <i class="bi bi-eye-slash position-absolute translate-middle-x end-0 top-50 "></i>
                </div>
                 <span asp-validation-for="Password" class="text-danger validate-text"></span>
                <div class="d-grid gap-2 mx-auto p-2 ">
                    <button type="submit">Login</button>
                </div>
                <div class="d-flex p-2 justify-content-center">
                    <a asp-controller="Auth" asp-action="ForgetPass" class="password-lost">Lost your Password?</a>
                </div>
                <div class="d-flex justify-content-center">
                    <span class="password-lost mb-5"> Don't have an account? <a asp-controller="Auth" asp-action="Register">Create an account</a></span>
                </div>
                <a asp-controller="PrivacyPolicy" asp-action="PrivacyPolicy" class=" d-flex p-5  mt-5 justify-content-center privacy">Privacy Policy</a>

            </form>
        </div>
    </div>
</div>
