
<!-- search Nav bar starts here -->

<div class="container justify-content-between d-flex">
    <div class="d-flex  col-auto">
      
        <input style="width:18rem" type="text" class="form-control border-none" placeholder="Search here..." aria-label="Search"
               aria-describedby="searchIcon" id="searchText">
    </div>

    <div class=" flex-row d-none d-md-flex">
        <ul class="navbar-nav filter-list-view d-flex flex-row pe-3 p-2">
            <li class="nav-item dropdown">
                <a class="nav-link ms-3 dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink "
                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Country
                    &nbsp; &nbsp; <img class=" pe-2" src="~/images/drop-down.png">
                    <ul class="dropdown-menu dropdown-menu-light scrollable-menu CountryListMissionFilter" id="CountryList" aria-labelledby="navbarDarkDropdownMenuLink">
                        @foreach (var obj in Model.Country)
                        {
                            <li value="@obj.CountryId">
                                <a class="dropdown-item" value="@obj.CountryId">@obj.Name</a>
                            </li>
                        }
                        
                    </ul>
                </a>
            </li>


            <li class="nav-item dropdown">
                <a class="nav-link ms-3  dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    City
                    &nbsp; &nbsp; <img class="ps-5 pe-2" src="~/images/drop-down.png">
                </a>
                <ul class="dropdown-menu dropdown-menu-light scrollable-menu CardsFilter CityListMissionFilter" id="CityList" aria-labelledby="navbarDarkDropdownMenuLink">
                        
                </ul>
            </li>


            <li class="nav-item  dropdown">
                <a class="nav-link ms-3 dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    Theme
                    &nbsp; &nbsp; <img class="ps-5 pe-2" src="~/images/drop-down.png">
                </a>
                <ul class="dropdown-menu dropdown-menu-light scrollable-menu CardsFilter ThemeListMissionFilter" aria-labelledby="navbarDarkDropdownMenuLink" id="ThemeList">
                    @foreach (var obj in Model.Theme)
                    {
                        <li>
                            <a class="dropdown-item" href="#">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@obj.MissionThemeId"/>
                                    <label class="form-check-label" value="@obj.MissionThemeId">
                                        @obj.Title
                                    </label>
                                </div>
                            </a>
                        </li>
                    }
                
                </ul>
            </li>


            <li class="nav-item  dropdown">
                <a class="nav-link ms-3  dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    Skill
                    &nbsp; &nbsp; <img class="ps-5 pe-2" src="~/images/drop-down.png">
                </a>
                <ul class="dropdown-menu dropdown-menu-light scrollable-menu CardsFilter" aria-labelledby="navbarDarkDropdownMenuLink" id="SkillList">
                    @foreach (var obj in Model.Skill)
                    {
                        <li>
                            <a class="dropdown-item" href="#">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@obj.SkillId"/>
                                    <label class="form-check-label" value="@obj.SkillId">
                                        @obj.SkillName
                                    </label>
                                </div>
                            </a>
                        </li>
                    }
                    @* <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>*@
                </ul>
            </li>
        </ul>
    </div>
    @*offcanvas starts from here*@

    <button class="img-filter border-none bg-white">
        <img src="~/images/filter.png" type="button" data-bs-toggle="offcanvas"
             data-bs-target="#filterMenu" aria-controls="filterMenu" />
    </button>

    <div class="offcanvas offcanvas-start" id="filterMenu" aria-labelledby="filterMenu">
        <div class="offcanvas-header flex-row-reverse">
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="accordion" id="filters">
                <div class="accordion-item border-none">
                    <h2 class="accordion-header" id="country">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#countriesAccordion" aria-expanded="false"
                                aria-controls="countriesAccordion">
                            Country
                        </button>
                    </h2>
                    <div id="countriesAccordion" class=" accordion-collapse collapse"
                         aria-labelledby="country" data-bs-parent="#filters">
                        <div class="accordion-body">
                         @*   <ul class="dropdown-menu dropdown-menu-light scrollable-menu CountryListMissionFilter" id="CountryList" aria-labelledby="navbarDarkDropdownMenuLink">
                        @foreach (var obj in Model.Country)
                        {
                            <li value="@obj.CountryId">
                                <a class="dropdown-item" value="@obj.CountryId">@obj.Name</a>
                            </li>
                        }
                        
                    </ul>*@

                            <ul class="scrollable-menu CountryListMissionFilter" id="CountryList" style="list-style: none">
                                @foreach (var obj in Model.Country)
                                {
                                    <li value="@obj.CountryId" class="mb-3">
                                        <a class="dropdown-item" value="@obj.CountryId">@obj.Name</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item border-none">
                    <h2 class="accordion-header" id="city">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#citiesAccordion" aria-expanded="false"
                                aria-controls="citiesAccordion" >
                            City
                        </button>
                    </h2>
                    <div id="citiesAccordion" class="accordion-collapse collapse" aria-labelledby="city"
                         data-bs-parent="#filters">
                        <div class="accordion-body">
                            <ul class="scrollable-menu CityListMissionFilter" id="CityList" style="list-style: none">
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="accordion-item border-none">
                    <h2 class="accordion-header" id="theme">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#themesAccordion" aria-expanded="false"
                                aria-controls="themesAccordion">
                            Theme
                        </button>
                    </h2>
                    <div id="themesAccordion" class="accordion-collapse collapse" aria-labelledby="theme"
                         data-bs-parent="#filters">
                        <div class="accordion-body ThemeListMissionFilter">
                            @foreach (var obj in Model.Theme)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <label class="form-check-label">
                                        @obj.Title
                                    </label>
                                </div>
                            }

                           
                        </div>
                    </div>
                </div>
                <div class="accordion-item border-none">
                    <h2 class="accordion-header" id="skill">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#skillsAccordion" aria-expanded="false"
                                aria-controls="skillsAccordion">
                            Skills
                        </button>
                    </h2>
                    <div id="skillsAccordion" class="accordion-collapse collapse" aria-labelledby="skill"
                         data-bs-parent="#filters">
                        <div class="accordion-body">
                            @foreach (var obj in Model.Skill)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <label class="form-check-label">
                                        @obj.SkillName
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



  
</div>
<div class="border-navbar"></div>
<div class="container p-4 d-flex flex-row">
    <div class="filter-pills">
    </div>
   
</div>
